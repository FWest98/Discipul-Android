            </intent-filter>
        </receiver>
        -->


        <!--
        Services
        <service android:name=".Notifications.GCMIntentService"/>
        -->


        <!-- Providers -->
        <provider
            android:name=".Data.SearchRecentsProvider"
            android:authorities="com.thomasdh.roosterpgplus.Data.SearchRecentsProvider" />

    </application>

</manifest>
