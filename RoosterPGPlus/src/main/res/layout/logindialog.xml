<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DialogTabs"
    android:layout_width="match_parent"
    android:layout_height="500dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        
        <TabWidget
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@android:id/tabs">
            
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/tabcontent"
                android:padding="5dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:id="@+id/Tab_Scrollview1">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/Tab_Textview1">

                        <EditText
                            android:id="@+id/logindialogusername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Gebruikersnaam" />

                        <EditText
                            android:id="@+id/logindialogpassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Wachtwoord"
                            android:inputType="textPassword" />


                    </LinearLayout>
                </ScrollView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="200px"
                    android:id="@+id/Tab_Scrollview2">
                    <TextView
                        android:id="@+id/Tab_Textview2"
                        android:text="@string/logindialog_tabs_llnr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingLeft="15dip"
                        android:paddingTop="15dip"
                        android:paddingRight="20dip"
                        android:paddingBottom="15dip"/>
                </ScrollView>
            </FrameLayout>
        </TabWidget>
    </LinearLayout>
</TabHost>