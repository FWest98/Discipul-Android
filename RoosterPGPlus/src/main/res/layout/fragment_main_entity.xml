<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rooster_entity_desc"
        android:background="?attr/colorPrimary"
        android:paddingLeft="72dp"
        android:textColor="#FFF"
        android:paddingBottom="10dp"
        android:textSize="@dimen/docentenrooster_descSize"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/rooster_swiperefresh"
        android:layout_height="0dp"
        android:layout_weight="2">

        <android.support.v4.view.ViewPager
            android:id="@+id/rooster_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/internet_connection_warning"
        android:id="@+id/internet_connection_warning"
        android:padding="10dp"
        android:text="@string/internet_connection_warning" />

</LinearLayout>
