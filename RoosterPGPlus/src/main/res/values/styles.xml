<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="logindialog_textcolor">#000</color>
    <color name="colorPrimary">#F5B400</color>
    <color name="colorPrimaryDark">#E59900</color>
    <color name="colorAccent">#FADC86</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MaterialDrawerTheme.Light.DarkToolbar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@android:color/background_light</item>
        <item name="actionBarWidgetTheme">@style/Theme.AppCompat.Light</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="PreferenceTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
        <item name="android:actionBarStyle">@style/BackActionBar</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorPrimary</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="BackActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    </style>

    <!-- Custom items -->
    <style name="ToolbarSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:textAppearance">@style/ToolbarSpinnerTextAppearance</item>
        <item name="android:dropDownSelector">@drawable/ic_spinner_more</item>
        <item name="android:spinnerItemStyle">@style/ToolbarSpinnerItem</item>
        <item name="colorControlNormal">#fff</item>
    </style>

    <style name="ToolbarSpinnerItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/ToolbarSpinnerTextAppearance</item>
    </style>

    <style name="ToolbarSpinnerTextAppearance" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarNavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">72dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:background">#fff</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorControlNormal">#808080</item>
    </style>

