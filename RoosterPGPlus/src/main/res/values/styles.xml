<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="logindialog_textcolor">#FFF</color>
    <color name="colorPrimary">#F5B400</color>
    <color name="colorPrimaryDark">#E59900</color>
    <color name="colorAccent">#FADC86</color>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MaterialDrawerTheme.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@android:color/background_light</item>
    </style>

    <style name="PreferenceTheme" parent="AppTheme">

    </style>

    <style name="ShowCaseTheme" parent="ShowcaseView">
        <item name="sv_showcaseColor">#F7D711</item>
        <item name="sv_backgroundColor">#CCF8F1C8</item>
        <item name="sv_titleTextAppearance">@style/ShowCaseTitle</item>
        <item name="sv_detailTextAppearance">@style/ShowCaseDetail</item>
    </style>

    <style name="ShowCaseTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#F7D711</item>
        <item name="android:textSize">32sp</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">50</item>
    </style>

    <style name="ShowCaseDetail" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">#000</item>
    </style>
</resources>
